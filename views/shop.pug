extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css") 

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card_header
                            h1.product_title #{product.title}
                        div.card_image
                            img(src="https://media.npr.org/assets/img/2023/03/20/copy-of-lk_books_harlan-158_wide-aba40cd92c03a1d9c7674c39ae62430435456461-s1100-c50.jpg", alt="Book Image")
                        div.card_content
                            h2.product_price $19.99
                            p.product_description A very interesting book
                        div.card_actions
                            button.btn Add to Cart
        else
            h1 No Products       
